{
  // Place your settings in this file to overwrite the default settings
  // IDE Settings
  "explorer.openEditors.visible": 0,
  "workbench.startupEditor": "none",
  "window.title": "${activeEditorLong}${separator}${rootName}",
  "editor.fontSize": 13,
  "editor.renderWhitespace": "all",
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 140,
  "editor.rulers": [140],
  "html.format.wrapLineLength": 140,
  "files.trimTrailingWhitespace": true,
  "npm.enableScriptExplorer": true,
  "npm.scriptExplorerAction": "run",
  "breadcrumbs.enabled": true,
  // Terminal Settings
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.fontFamily": "Source Code Pro",
  "terminal.integrated.confirmOnExit": true,
  // Git
  "git.confirmSync": false,
  "git.autofetch": true,
  // Docker
  "docker.showExplorer": false,
  // Terraform
  "terraform.format": {
    "enable": true,
    "ignoreExtensionsOnSave": [".tfvars"]
  },
  "reactPureToClass.typescript": true,
  "terminal.integrated.rendererType": "dom",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "jest.autoEnable": false,
  "jest.enableCodeLens": false,
  "diffEditor.maxComputationTime": 0,
  "editor.tabSize": 2,
  "workbench.colorTheme": "Atom One Dark",
  "editor.fontFamily": "Source Code Pro, Hack, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": "'ccmp' off",
  "files.insertFinalNewline": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock",
    "webpack.config.js": "webpack.*.js"
  },
  "window.commandCenter": true
}
